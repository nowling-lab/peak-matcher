import argparse
import pandas as pd

def parse_args():
    parser = argparse.ArgumentParser()

    parser.add_argument("--source-peaks-fl",
                        type=str,
                        required=True)

    parser.add_argument("--output-peaks-fl",
                        type=str,
                        required=True)

    parser.add_argument("--window-size",
                        type=int,
                        required=True)

    return parser.parse_args()

if __name__ == "__main__":
    args = parse_args()

    peaks = pd.read_csv(args.source_peaks_fl,
                        sep="\t",
                        header=None,
                        names=["chrom", "start", "end", "peak_name", "score", "strand", "lfc", "p_value", "q_value", "relative_summit"])

    center = peaks["start"] + peaks["relative_summit"]
    peaks["relative_summit"] = args.window_size // 2
    peaks["start"] = center - args.window_size // 2
    peaks["end"] = center + args.window_size // 2

    peaks.to_csv(args.output_peaks_fl,
                 sep="\t",
                 index=False,
                 header=False)
